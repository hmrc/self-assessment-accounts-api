{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List self assessment charges",
  "description": "List self assessment charges",
  "type": "object",
  "properties": {
    "charges": {
      "description": "A list of charges.",
      "type": "array",
      "items": {
        "title": "charge",
        "type": "object",
        "properties": {
          "taxYear": {
            "description": "The tax year that this charge relates to in the format: YYYY-YY.",
            "type": "string",
            "example": "2019-20"
          },
          "transactionId": {
            "description": "A unique identifier for the charge.",
            "type": "string",
            "example": "1234567890AB"
          },
          "transactionDate": {
            "description": "The date the charge was created.",
            "type": "string",
            "example": "2019-08-11"
          },
          "type": {
            "description": "A description of the type of charge.",
            "type": "string",
            "example": "Balancing Charge Debit"
          },
          "totalAmount": {
            "description": "The original amount of the charge.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "1000.25"
          },
          "outstandingAmount": {
            "description": "The amount of the charge still due.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "1000.25"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "A list of endpoint links that indicate possible actions related to the current resource",
              "properties": {
                "href": {
                  "description": "The relative url of the endpoint",
                  "type": "string",
                  "example": "/accounts/self-assessment/AA999999A/transactions/1234567890AB"
                },
                "rel": {
                  "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
                  "type": "string",
                  "enum": [
                    "retrieve-transaction-details"
                  ]
                },
                "method": {
                  "description": "The HTTP method type for the endpoint",
                  "type": "string",
                  "enum": [
                    "GET"
                  ]
                }
              },
              "required": [
                "href",
                "rel",
                "method"
              ]
            }
          }
        },
        "required": [
          "taxYear",
          "transactionId",
          "transactionDate",
          "totalAmount",
          "outstandingAmount"
        ]
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/accounts/self-assessment/AA999999A/charges?from=2018-01-01&to=2019-01-01"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self",
              "list-transactions"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ]
      }
    }
  },
  "required": [
    "charges"
  ]
}
