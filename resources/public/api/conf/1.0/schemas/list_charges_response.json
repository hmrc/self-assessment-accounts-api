{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List self assessment charges",
  "description": "List self assessment charges",
  "type": "object",
  "properties": {
    "charges": {
      "description": "A list of charges.",
      "type": "array",
      "items": {
        "title": "charge",
        "type": "object",
        "properties": {
          "taxYear": {
            "description": "The tax year to which the charge relates.",
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}$",
            "example": "2019-20"
          },
          "id": {
            "description": "A unique identifier for the charge.",
            "type": "string",
            "pattern": "^[0-9A-Za-z]{1,12}$"
          },
          "transactionDate": {
            "description": "The date the charge was created.",
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "type": {
            "description": "A description of the type of charge.",
            "type": "string",
            "pattern": "^[0-9a-zA-Z\\s]{1,30}$"
          },
          "totalAmount": {
            "description": "The original amount of the charge.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "1000.25"
          },
          "outstandingAmount": {
            "description": "The amount of the charge still due.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "1000.25"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "A list of endpoint links that indicate possible actions related to the current resource",
              "properties": {
                "href": {
                  "description": "The relative url of the endpoint",
                  "type": "string",
                  "example": "/accounts/self-assessment/{nino}/charges/{chargeId}"
                },
                "rel": {
                  "description": "A label for the endpoint, which describes how it is related to the current resource.",
                  "type": "string",
                  "enum": [
                    "retrieve-charge-history"
                  ]
                },
                "method": {
                  "description": "The HTTP method type for the endpoint",
                  "type": "string",
                  "enum": [
                    "GET"
                  ]
                }
              },
              "required": [
                "href",
                "rel",
                "method"
              ]
            }
          }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/accounts/self-assessment/{nino}/charges"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ]
      }
    }
  },
  "required": [
    "charges"
  ]
}
