{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "List self assessment payments",
  "description": "List self assessment payments",
  "type": "object",
  "properties": {
    "payments": {
      "description": "A list of payments.",
      "type": "array",
      "items": {
        "title": "payment",
        "type": "object",
        "properties": {
          "paymentId": {
            "description": "A unique identifier for the payment.",
            "type": "string",
            "pattern": "^[0-9A-Za-z]{1,12}-[0-9A-Za-z]{1,6}$",
            "example": "X234567891BY-AT3579"
          },
          "amount": {
            "description": "The amount of the payment received into the account.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "1000.25"
          },
          "method": {
            "description": "The method used to make the payment.",
            "type": "string",
            "pattern": "^[0-9A-Za-z\\s]{1,30}$",
            "example": "Payment by Card"
          },
          "transactionDate": {
            "description": "The date the payment was received into the account. Date in the format: YYYY-MM-DD.",
            "type": "string",
            "example": "2019-12-29"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "A list of endpoint links that indicate possible actions related to the current resource",
              "properties": {
                "href": {
                  "description": "The relative url of the endpoint",
                  "type": "string",
                  "example": "/accounts/self-assessment/{nino}/payments/{paymentId}"
                },
                "rel": {
                  "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
                  "type": "string",
                  "enum": [
                    "retrieve-payment-allocations"
                  ]
                },
                "method": {
                  "description": "The HTTP method type for the endpoint",
                  "type": "string",
                  "enum": [
                    "GET"
                  ]
                }
              },
              "required": [
                "href",
                "rel",
                "method"
              ],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/accounts/self-assessment/{nino}/payments?from={from}&to={to}"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self",
              "list-transactions"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "payments"
  ],
  "additionalProperties": false
}
