{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Retrieve a self assessment transactions",
  "description": "Retrieve a self assessment transactions",
  "type": "object",
  "properties": {
    "transactions": {
      "description": "A list of one or more charges and payments.",
      "type": "array",
      "items": {
        "title": "transactionItem",
        "type": "object",
        "properties": {
          "taxYear": {
            "description": "The tax year that this item relates to. In the format YYYY-YY.",
            "type": "string",
            "example": "2018-19"
          },
          "transactionId": {
            "description": "A unique identifier for this item.",
            "type": "string",
            "pattern": "^[A-Za-z0-9]{1,12}$",
            "example": "X123456790A"
          },
          "paymentId": {
            "description": "A unique identifier for the payment.",
            "type": "string",
            "pattern": "^[A-Za-z0-9]{1,12}\\-[A-Za-z0-9]{1,6}$",
            "example": "081203010024-000001"
          },
          "transactionDate": {
            "description": "The date the item was created. Date in the format YYYY-MM-DD.",
            "type": "string",
            "example": "2018-04-05"
          },
          "type": {
            "description": "The type of financial transaction.",
            "type": "string",
            "example": "Balancing charge debit"
          },
          "originalAmount": {
            "description": "The original value of this transaction.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "600.00"
          },
          "outstandingAmount": {
            "description": "The remaining due amount on this transaction.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "600.00"
          },
          "lastClearingDate": {
            "description": "The date the outstanding amount was last modified. Date in the format YYYY-MM-DD.",
            "type": "string",
            "example": "2018-04-05"
          },
          "lastClearingReason": {
            "description": "The reason for the change.",
            "type": "string",
            "example": "Incoming Payment"
          },
          "lastClearedAmount": {
            "description": "The amount the transaction was last modified by.",
            "type": "number",
            "multipleOf": 0.01,
            "minimum": -99999999999.99,
            "maximum": 99999999999.99,
            "example": "600.00"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "A list of endpoint links that indicate possible actions related to the current resource",
              "properties": {
                "href": {
                  "description": "The relative url of the endpoint",
                  "type": "string",
                  "example": "/accounts/self-assessment/{nino}/payments/{paymentId}"
                },
                "rel": {
                  "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
                  "type": "string",
                  "enum": [
                    "retrieve-charge-history",
                    "retrieve-payment-allocations"
                  ]
                },
                "method": {
                  "description": "The HTTP method type for the endpoint",
                  "type": "string",
                  "enum": [
                    "GET"
                  ]
                }
              },
              "required": [
                "href",
                "rel",
                "method"
              ]
            }
          }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint",
            "type": "string",
            "example": "/accounts/self-assessment/{nino}/transactions"
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource. The rel will be self where the action is retrieval of the same resource",
            "type": "string",
            "enum": [
              "self",
              "list-charges",
              "list-payments"
            ]
          },
          "method": {
            "description": "The HTTP method type for the endpoint",
            "type": "string",
            "enum": [
              "GET"
            ]
          }
        },
        "required": [
          "href",
          "rel",
          "method"
        ]
      }
    }
  },
  "required": [
    "transactions"
  ]
}